<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" fx:id="mRootLayout">

    <ToolBar fx:id="mToolBar" style="-fx-padding: 5px 10px 5px 10px;">
        <Button fx:id="mFileButton" text="New file" style="-fx-font-size: 15 pt;"/>
        <Separator/>
        <Button fx:id="mRestartButton" text="Restart" style="-fx-font-size: 15 pt;" visible="false" />
    </ToolBar>


    <GridPane fx:id="mGrid" gridLinesVisible="true" vgap="1" hgap="1">

        <rowConstraints>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
            <RowConstraints percentHeight="25"/>
        </rowConstraints>

        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>

    </GridPane>

    <Label fx:id="mStatusLabel" text="Step count: 0" style="-fx-font-size: 18 pt" visible="false"/>

</VBox>